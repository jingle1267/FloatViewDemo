<?xml version="1.0" encoding="utf-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android" >  
    <!-- 获得焦点但未按下时的背景图片 -->  
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/icon_device_unquiet" />
    <!-- 按下时的背景图片 -->  
    <item android:state_enabled="true" android:state_pressed="true" android:drawable="@drawable/icon_device_unquiet_press" />  
    <!-- 默认时的背景图片 -->  
    <item android:drawable="@drawable/icon_device_unquiet" />
</selector>  